<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffffff"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/messageinfocell_imageview_dir"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_board" />

    <TextView
        android:id="@+id/messageinfocell_label_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_horizontal|center_vertical|left"
        android:text="Test"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/messageinfocell_label_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="bottom"
        android:text="111111"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

</LinearLayout>
